<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="@dimen/cell_left_part_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/cell_top_margin"
        android:layout_marginStart="@dimen/cell_start_margin"
        android:layout_marginEnd="@dimen/order_left_part_end_margin"
        android:id="@+id/controlContainer"
        android:layout_alignParentStart="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_status_height"
            android:id="@+id/orderStatus"
            android:paddingEnd="@dimen/order_status_end_padding"
            android:textSize="@dimen/order_content_text_size"
            android:gravity="center_vertical|end"
            android:textColor="@color/colorWhite"
            android:background="@android:color/holo_orange_light"/>
        <ImageView
            android:id="@+id/orderIcon"
            android:layout_width="@dimen/order_icon_size"
            android:layout_height="@dimen/order_icon_size"
            android:layout_marginBottom="@dimen/order_icon_bottom_margin"
            android:layout_marginTop="@dimen/order_icon_top_margin"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/workers_top_margin"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/order_content_text_size"
            android:textColor="@android:color/black"
            android:id="@+id/orderPositionLeft"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/take_order_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/take_order_button_top_margin"
            android:id="@+id/takeOrderButton"
            android:background="@drawable/take_order_button_background"
            android:text="@string/order_take_button"
            android:textSize="@dimen/order_content_text_size"
            android:textAllCaps="false"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/detailsContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/cell_end_margin"
        android:layout_marginStart="@dimen/cell_end_margin"
        android:layout_marginTop="@dimen/cell_top_margin"
        android:layout_toEndOf="@+id/controlContainer"
        android:textAppearance="?attr/textAppearanceListItem" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/orderType"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/order_title_text_size"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/orderDate"
            android:layout_below="@+id/orderType"
            android:layout_marginTop="@dimen/order_date_top_margin"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/order_content_text_size"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/orderTime"
            android:layout_marginTop="@dimen/order_date_top_margin"
            android:layout_marginStart="@dimen/order_time_margin"
            android:layout_below="@+id/orderType"
            android:layout_toEndOf="@id/orderDate"
            android:textColor="@android:color/black"
            android:textSize="@dimen/order_content_text_size"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/orderDetails"
            android:layout_below="@+id/orderDate"
            android:layout_marginTop="@dimen/order_details_top_margin"
            android:layout_alignParentStart="true"
            android:text="@string/order_details_title"
            android:textSize="@dimen/order_content_text_size"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderDetails"
            android:layout_marginTop="@dimen/order_date_top_margin"
            android:orientation="horizontal"
            android:id="@+id/orderDetailsContainer"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/orderDistanceTilte"
                android:text="@string/order_distance_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/order_content_text_size"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/orderDistanceValue"
                android:textColor="@android:color/black"
                android:textSize="@dimen/order_content_text_size"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/order_details_separator"
                android:textColor="@android:color/black"
                android:textSize="@dimen/order_content_text_size"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:id="@+id/orderDurationTitle"
                android:text="@string/order_duration_title"
                android:textSize="@dimen/order_content_text_size"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:id="@+id/orderDurationValue"
                android:textSize="@dimen/order_content_text_size"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/order_details_separator"
                android:textColor="@android:color/black"
                android:textSize="@dimen/order_content_text_size"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/order_cost_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/order_content_text_size"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/orderCostValue"
                android:textColor="@android:color/black"
                android:textSize="@dimen/order_content_text_size"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/order_address"
            android:layout_marginTop="@dimen/order_details_top_margin"
            android:id="@+id/orderAddressTitle"
            android:layout_below="@+id/orderDetailsContainer"
            android:textSize="@dimen/order_content_text_size"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/orderAddressValue"
            android:layout_marginTop="@dimen/order_date_top_margin"
            android:layout_below="@+id/orderAddressTitle"
            android:textSize="@dimen/order_content_text_size"
            android:textColor="@android:color/black"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/cell_bottom_margin"
        android:layout_below="@+id/detailsContent"/>
</RelativeLayout>
