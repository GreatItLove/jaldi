<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/cell_top_margin"
    android:paddingBottom="@dimen/cell_bottom_margin"
    android:paddingEnd="@dimen/cell_end_margin"
    android:paddingStart="@dimen/cell_start_margin">

<LinearLayout
    android:layout_width="135dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_marginEnd="@dimen/order_control_right_margin"
    android:id="@+id/controlContainer"
    android:layout_alignParentStart="true"
    >
    <ImageView
        android:id="@+id/orderIcon"
        android:layout_width="@dimen/order_icon_size"
        android:layout_height="@dimen/order_icon_size"
        android:src="@drawable/app_icon"
        android:layout_gravity="center_horizontal"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="@dimen/workers_top_margin"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:id="@+id/orderPositionLeft"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/take_order_button_top_margin"
        android:id="@+id/takeOrderButton"
        android:background="@drawable/take_order_button_background"
        android:text="@string/order_take_button"
        android:textAllCaps="false"/>
</LinearLayout>


    <RelativeLayout
        android:id="@+id/detailsContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/controlContainer"
        android:layout_toEndOf="@+id/controlContainer"
        android:textAppearance="?attr/textAppearanceListItem" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:id="@+id/orderType"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:id="@+id/orderDate"
        android:layout_below="@+id/orderType"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:id="@+id/orderTime"
        android:layout_marginStart="@dimen/order_time_margin"
        android:layout_below="@+id/orderType"
        android:layout_toEndOf="@id/orderDate"
        android:textColor="@android:color/black"
        android:textSize="12sp"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/orderDetails"
            android:layout_below="@+id/orderDate"
            android:layout_marginTop="@dimen/order_details_top_margin"
            android:layout_alignParentStart="true"
            android:text="Details"
            android:textSize="12sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderDetails"
            android:orientation="horizontal"
            android:id="@+id/orderDetailsContainer"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/orderDistanceTilte"
                android:text="Distance: "
                android:textColor="@android:color/black"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/orderDistanceValue"
                android:text="100 km"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/order_details_separator"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:id="@+id/orderDurationTitle"
                android:text="Duration: "
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:id="@+id/orderDurationValue"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/order_details_separator"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/order_cost_title"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/orderCostValue"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Address"
            android:layout_marginTop="@dimen/order_details_top_margin"
            android:id="@+id/orderAddressTitle"
            android:layout_below="@+id/orderDetailsContainer"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/orderAddressValue"
            android:layout_below="@+id/orderAddressTitle"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            />


    </RelativeLayout>
</RelativeLayout>
